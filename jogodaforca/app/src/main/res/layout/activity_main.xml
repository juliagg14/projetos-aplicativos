<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context="views.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/creepster"
        android:text="Jogo da forca"
        android:textColor="#9CFA99"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#9BF998"
        android:text="limpar"
        android:textColor="#1E1E1E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnVerificar"
        app:layout_constraintVertical_bias="0.123" />

    <Button
        android:id="@+id/BtnVerificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#9BF998"
        android:text="verificar"
        android:textColor="#1E1E1E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="269dp"
        android:layout_height="63dp"
        android:layout_marginTop="164dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/Campo1"
            android:layout_width="53dp"
            android:layout_height="41dp"
            android:backgroundTint="#9BF998"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#9AF897"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Campo2"
            android:layout_width="53dp"
            android:layout_height="41dp"
            android:backgroundTint="#9BF998"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#9AF897"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Campo3"
            android:layout_width="53dp"
            android:layout_height="41dp"
            android:backgroundTint="#9BF998"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#9AF897"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Campo4"
            android:layout_width="53dp"
            android:layout_height="41dp"

            android:backgroundTint="#9BF998"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#9AF897"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Campo5"
            android:layout_width="53dp"
            android:layout_height="41dp"
            android:backgroundTint="#9BF998"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#9AF897"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>